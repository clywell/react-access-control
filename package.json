{
    "name": "@clywell/react-access-control",
    "version": "0.0.2",
    "description": "A comprehensive React access control and permission management system with role-based access control, feature flags, and route protection",
    "type": "module",
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "src/styles.css",
        "README.md",
        "CHANGELOG.md"
    ],
    "scripts": {
        "build": "rollup -c",
        "dev": "rollup -c -w",
